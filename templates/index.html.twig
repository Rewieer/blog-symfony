{% extends "layout/base.html.twig" %}
{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset("css/article.css") }}" />
{% endblock %}
{% block body %}
  <div class="col-lg-9 article-section">
    {% for article in list.entities %}
      <div class="article">
        <h3 class="article-name mt-4">
          <a href="{{ path("article_view", { "id": article.id, "slug": article.slug }) }}">
            {{ article.title }}
          </a>
          <small class="when">
            {{ article.createdAt|date("F Y") }}
          </small>
        </h3>
        {% if article.preview %}
          <div class="article-content">
            <p>
              {{ article.preview|raw }}<br />
              <a href="{{ path("article_view", { "id": article.id, "slug": article.slug }) }}">Read it</a>
            </p>

          </div>
        {% else %}
          <div class="article-content">
            {{ article.content|raw }}
          </div>
        {% endif %}

      </div>

    {% endfor %}

  </div>

  <!-- Sidebar Widgets Column -->
  <div class="col-md-3">
    <div class="about-me-block">
      <img class="my-photo rounded mx-auto d-block"
           src="https://scontent-cdg2-1.xx.fbcdn.net/v/t1.0-9/18447480_101026737149070_1371996189349792247_n.jpg?oh=1b15ca7124c2eb4b8935ba45fbf8b637&oe=5AD239B5" />
      <p class="about-text">
        I'm a tech entrepreneur who likes to talk about mobile application development, websites and microservices
        in PHP and Javascript.
      </p>
    </div>
  </div>
{% endblock %}